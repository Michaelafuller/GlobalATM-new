@{
    ViewData["Title"] = "Home Page";
}

@model User
<h2>Register</h2>
<a asp-action="Login">Already Registered?  Go ahead and login...</a>
<hr>
<form asp-action="register" method="post" asp-controller="Home" class="logreg">
    <div class="form-group">
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName" class="text-danger"></span>
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email" class="text-danger"></span>
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
            <label asp-for="Birthday"></label>
            <input type="date" asp-for="Birthday" class="form-control">
            <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select onchange="hideCardOrAccount(this)" asp-for="AccountType"  class="form-control">
                <option value="" disabled selected>Select Account Type...</option>
                <option value="Checking">Checking</option>
                <option value="Saving">Saving</option>
        </select> 
    </div>       
    <div class="form-group" id="CardNum" style="display: none;">
        <label asp-for="CardNumber"></label>
        <input class="form-control" asp-for="CardNumber">
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>
    <div class="form-group" id="AccountNum" style="display: none;">
        <label asp-for="AccountNumber"></label>
        <input class="form-control" asp-for="AccountNumber">
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>
    <div class="form-group">
        <span asp-validation-for="Pin" class="text-danger"></span>
        <label asp-for="Pin"></label>
        <input class="form-control" asp-for="Pin">
    </div>
    <div class="form-group">
        <span asp-validation-for="Confirm" class="text-danger"></span>
        <label asp-for="Confirm"></label>
        <input class="form-control" asp-for="Confirm">
    </div>
    <input class="btn btn-primary" type="submit" value="Register">
</form>