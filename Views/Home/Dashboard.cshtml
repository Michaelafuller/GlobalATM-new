@model User
<h1>Welcome, @Model.FirstName</h1>

@foreach (var item in Model.Accounts)
    {
    <table class="table table-striped">
        <tr>
            @* A ViewBag to get the associated account (checking vs. savings) to the account id? *@
            <th>@item.AccountId</th> 
            @* <th>Type of Transaction?</th> *@
            <th>Amount</th>
            <th>Date</th>
            @foreach (var transaction in ViewBag.allTransactions)
            {
                <tr>
                    <td>@item.AccountId</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.CreatedAt</td>
                </tr>
            }
        </tr>
    </table>
    }
<p class="text-danger">all links are broken</p>
