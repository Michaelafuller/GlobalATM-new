@model ConversionRaw

<h1>Foreign Currency Converter</h1>
<div class="form-group">
    <form action="convert" method="get">
    <label>"From" Currency</label>
    <select asp-for="Base_Currency_Code">
        <option value="USD">USD</option>
        <option value="UAD">UAD</option>
        <option value="CAD">CAD</option>
        <option value="MXN">MXN</option>
        @* etc... *@
    </select>
</div>



<div class="form-group">
        <label>"To" Currency</label>
@* Likely this will need to be an additional property -- FROM currency TO currency *@
    <select asp-for="Base_Currency_Code">
        <option value="USD">USD</option>
        <option value="UAD">UAD</option>
        <option value="CAD">CAD</option>
        <option value="MXN">MXN</option>
    </select>
</div>

<div class="form-group">
    <input id="convert-input" asp-for="Amount" placeholder="How much do you want to convert?">
    <button class="btn white-btn">Convert</button>
</div>